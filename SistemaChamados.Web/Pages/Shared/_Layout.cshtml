<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Helpy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="header">
            <img src="~/images/logo.png" alt="Helpy" style="width:56px;height:56px;border-radius:12px;" />
            <div class="brand">Helpy — @ViewData["PageTitle"]</div>

            <div style="margin-left:auto; display:flex; gap:10px; align-items:center;">
                @if (Context.Session.GetString("UsuarioEmail") != null)
                {
                    <div class="text-muted small">Olá, @Context.Session.GetString("UsuarioEmail")</div>
                    <button id="themeToggle" class="btn btn-ghost" title="Alternar tema">Modo</button>
                    <a href="/Logout" class="btn btn-ghost">Sair</a>
                }
            </div>
        </div>

        @if (Context.Session.GetString("UsuarioEmail") != null)
        {
            <div class="dashboard">
                <aside class="sidebar">
                    <div class="section-title">Menu</div>
                    <nav>
                        <a href="/Dashboard" class="@(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")">Dashboard</a>
                        <a href="/Chamados/Novo" class="@(ViewData["ActivePage"]?.ToString() == "Novo" ? "active" : "")">Abrir Chamado</a>
                        <a href="/Chamados/Meus" class="@(ViewData["ActivePage"]?.ToString() == "Meus" ? "active" : "")">Meus Chamados</a>
                        <a href="/Perfil" class="@(ViewData["ActivePage"]?.ToString() == "Perfil" ? "active" : "")">Perfil</a>
                        <a href="/Relatorios" class="@(ViewData["ActivePage"]?.ToString() == "Relatorios" ? "active" : "")">Relatórios</a>
                        <a href="/Configuracoes" class="@(ViewData["ActivePage"]?.ToString() == "Configuracoes" ? "active" : "")">Configurações</a>
                    </nav>
                </aside>

                <main class="main">
                    @RenderBody()
                </main>
            </div>
        }
        else
        {
            @RenderBody()
        }

        <footer style="margin-top:22px; text-align:center; color: rgba(230,238,248,0.6); font-size:13px;">
            © 2025 Helpy — Sistema de Chamados com IA
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Tema claro/escuro
        const themeToggle = document.getElementById('themeToggle');
        if (themeToggle) {
            function applyTheme(theme) {
                if (theme === 'light') {
                    document.documentElement.setAttribute('data-theme', 'light');
                    themeToggle.textContent = 'Claro';
                } else {
                    document.documentElement.removeAttribute('data-theme');
                    themeToggle.textContent = 'Escuro';
                }
            }

            // Aplicar tema salvo
            const savedTheme = localStorage.getItem('helpy_theme') || 'dark';
            applyTheme(savedTheme);

            // Toggle tema
            themeToggle.addEventListener('click', () => {
                const currentTheme = document.documentElement.hasAttribute('data-theme') ? 'light' : 'dark';
                const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                applyTheme(newTheme);
                localStorage.setItem('helpy_theme', newTheme);
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
